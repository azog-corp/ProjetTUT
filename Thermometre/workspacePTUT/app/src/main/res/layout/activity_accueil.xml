<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titreAcceuil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/titre"
            android:textAlignment="center"
            android:textColor="@color/couleurAppli"
            android:textSize="40sp">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titreTemp">

        <TextView
            android:id="@+id/temperatureAcceuil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/temperatureActuelle"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="100sp"
            android:background="@drawable/textview_cadre"
            android:layout_margin="10dp">

        </TextView>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageAcceuil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/thermometre"
        android:layout_marginTop="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

    </ImageView>

    <TextView
        android:id="@+id/titreTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Derniere Temperature :"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textColor="@color/couleurAppli"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/imageAcceuil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </TextView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="30sp"
        android:background="@color/couleurAppli"
        android:textColor="@color/blanc"
        android:text="@string/btnMenu"
        android:id="@+id/btnMenu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearTemp" />

</androidx.constraintlayout.widget.ConstraintLayout>